@model IPagedResult

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a class="page-link" asp-route-pageindex="@(Model.PageIndex - 1)" asp-route-query="@Model.Query" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        @{
            for (var i = 1; i < Model.TotalPages + 1; i++)
            {
                if (i == Model.PageIndex)
                {
                    <li class="page-item active">
                        <a class="page-link" asp-action="@Model.ReferenceAction" asp-route-pagesize="@Model.PageSize" asp-route-pageindex="@i" asp-route-query="@Model.Query">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="@Model.ReferenceAction" asp-route-pagesize="@Model.PageSize" asp-route-pageindex="@i" asp-route-query="@Model.Query">@i</a>
                    </li>
                }
            }
        }

        <li class="page-item">
            <a class="page-link" asp-route-pageindex="@(Model.PageIndex + 1)" asp-route-query="@Model.Query" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>